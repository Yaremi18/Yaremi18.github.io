---
import avatarMe from "@assets/img/avatar.png";
import Arrow from "@components/icons/Arrow.astro";
---

<section>
  <p>
    <span class="name">Hi, üëãüèΩ I'm Yaremi</span>
    <br />
    <span class="academic-title">SOFTWARE ENGINEER</span>
  </p>

  <img class="avatar" src={avatarMe.src} />
  <Arrow height="217" width="300" />
</section>

<style>
  @keyframes jumpArrow {
    0%,
    100% {
      transform: scaleX(-1) rotate(317deg) translateY(0);
    }
    50% {
      transform: scaleX(-1) rotate(317deg) translateY(-20px);
    }
  }
  section {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    min-height: 600px;
    width: 100%;
    margin-top: 30px;
    gap: 30px;

    .arrow {
      stroke: none !important;
      position: absolute;
      top: 400px;
      right: 500px;

      animation: jumpArrow 2s ease-in-out 3;

      @media (max-width: 1130px) {
        top: 540px;
      }

      @media (max-width: 820px) {
        height: 180px;
        right: 450px;
      }
      @media (max-width: 750px) {
        display: none;
      }
    }
  }

  p {
    margin: 0;
    align-self: flex-start;
    margin-top: 130px;
  }

  .name {
    font-size: 45px;
    line-height: 70px;
  }

  .academic-title {
    font-family: PlaywriteGBS;
    font-size: 45px;
    color: var(--primary-color);
    padding-bottom: 5px;
    border-bottom: 1px solid var(--primary-color);
  }

  .avatar {
    width: 100%;
    object-fit: contain;
    max-width: 470px;
    height: auto;
    @media (max-width: 1130px) {
      margin-left: auto;
    }
  }
</style>
